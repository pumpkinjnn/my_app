<% provide(:title, @chronology_test_answer.name) %>


<header id="header" class="alt">
  <h1><%= @chronology_test_answer.name %></h1>
</header>

<section id="banner">
  <div class="inner">
    <%= image_tag("sexy_geralt.png", :alt => "icon feed", :size => "580x400") %> <br />
    <h2> Your Answer : <%= @chronology_test_answer.answer %></h2>
    <div>
    <%= form_with do %>

    <%= f.label :name  "Students Answer (put 0 if the student left it blank)"%>
    <%= f.text_field :name%>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Submit Student's Answer", class: "button primary" %>
    <% end %>
    </div>
  </div>
</section>
